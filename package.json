{
  "name": "chat-gpt-app",
  "version": "1.0.0",
  "description": "Service serves chat apis that allows users interact with LLMs",
  "author": "Phat Vo",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "clean": "rm -r dist .db-data",
    "format": "prettier --write ./**/*.{ts,js,json,*rc}",
    "lint": "eslint \"{src,apps,libs,test}/**/*.{ts,html,js,json,jsx,md,ts,tsx}\" --fix --color",
    "lint:cache": "npm run lint --cache --quiet",
    "lint:fix": "npm run lint:cache --fix",
    "lint-staged": "lint-staged",
    "build:chat-api": "nest build chat-api",
    "start:chat-api": "cross-env SERVICE_NAME=chat-api nest start chat-api",
    "start:chat-api:dev": "npm run start:chat-api --watch",
    "start:chat-api:prod": "node dist/apps/chat-api/main",
    "db:restore": "docker-compose exec mongo sh database/restore.sh",
    "test:e2e": "jest --runInBand --forceExit",
    "test": "jest",
    "start:prod:compose": "docker-compose up --abort-on-container-exit --build",
    "test:compose": "docker-compose -f ./docker-compose.testing.yaml up --remove-orphans --force-recreate --build -d && npm run test"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && npm run test"
    }
  },
  "lint-staged": {
    "*.ts": "eslint"
  },
  "dependencies": {
    "@nestjs/common": "^9.0.0",
    "@nestjs/config": "^2.3.4",
    "@nestjs/core": "^9.0.0",
    "@nestjs/mongoose": "^9.2.2",
    "@nestjs/platform-express": "^9.0.0",
    "@nestjs/platform-fastify": "^9.4.3",
    "@nestjs/swagger": "^6.3.0",
    "@nestjs/throttler": "^4.1.0",
    "child_process": "^1.0.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "fastify-cookie": "^5.7.0",
    "fastify-csrf": "^3.1.0",
    "fastify-swagger": "^5.2.0",
    "lodash": "^4.17.21",
    "mongodb": "^5.6.0",
    "mongoose": "^7.3.0",
    "nanoid": "^4.0.2",
    "nestjs-pino": "^3.2.0",
    "qs": "^6.11.2",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^5.0.1",
    "rxjs": "^7.8.1",
    "swagger-ui-express": "^4.6.3"
  },
  "devDependencies": {
    "@nestjs/cli": "^9.0.0",
    "@nestjs/schematics": "^9.0.0",
    "@nestjs/testing": "^9.0.0",
    "@types/express": "^4.17.13",
    "@types/jest": "29.5.0",
    "@types/lodash": "^4.14.195",
    "@types/mongoose": "^5.11.97",
    "@types/node": "18.15.11",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.0.1",
    "eslint-config-adjunct": "^4.12.2",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-auto": "^0.7.3",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-array-func": "^3.1.8",
    "eslint-plugin-const-case": "^1.2.2",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-html": "^7.1.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jest": "^27.2.1",
    "eslint-plugin-jest-async": "^1.0.3",
    "eslint-plugin-jest-formatting": "^3.1.0",
    "eslint-plugin-json": "^3.1.0",
    "eslint-plugin-local": "^1.0.0",
    "eslint-plugin-lodash": "^7.4.0",
    "eslint-plugin-lodash-fp": "^2.2.0-a1",
    "eslint-plugin-markdown": "^3.0.0",
    "eslint-plugin-no-constructor-bind": "^2.0.4",
    "eslint-plugin-no-loops": "^0.3.0",
    "eslint-plugin-no-secrets": "^0.8.9",
    "eslint-plugin-no-unsanitized": "^4.0.2",
    "eslint-plugin-no-use-extend-native": "^0.5.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-optimize-regex": "^1.2.1",
    "eslint-plugin-pii": "^1.0.2",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-scanjs-rules": "^0.2.1",
    "eslint-plugin-security": "^1.7.1",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "eslint-plugin-sonarjs": "^0.19.0",
    "eslint-plugin-switch-case": "^1.1.2",
    "eslint-plugin-unicorn": "^47.0.0",
    "eslint-plugin-xss": "^0.1.12",
    "husky": "^8.0.3",
    "jest": "29.5.0",
    "jest-extended": "^4.0.0",
    "lint-staged": "^13.2.2",
    "prettier": "^2.3.2",
    "source-map-support": "^0.5.20",
    "supertest": "^6.1.3",
    "ts-jest": "29.0.5",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "4.2.0",
    "typescript": "^4.7.4"
  }
}
